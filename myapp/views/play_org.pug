doctype html

html
	head
		title="race_condition"
		link(href='/stylesheets/main.css' rel='stylesheet')
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css")
	body

		div(id="container")

			include ./header.pug


			div(id="body")

				br
				br
				div(class="play")

					button(class="button", style="vertical-align:middle", onclick="window.location.href = '/create-game'")
						span Create Game


					br
					br
					br
					hr

					div(id="fadeDIV")
						h3 Games to Join

					script.
						console.log("HERE");
						console.log(puzzle_difficulty_color("easy"));

					if games
						table(style="width:100%")
							col(style="width:100px")
							col(style="width:200px")
							col(style="width:20px")
							col(style="width:20px")
							col(style="width:20px")
							col(style="width:20px")
							col(style="width:20px")
							col(style="width:20px")
							col(style="width:50px")
							col(style="width:30px")
							tr
								th Creator
								th Languages
								th(colspan="3") Puzzle Mix
								th(colspan="3") Puzzle Times
								th Players
								th Join

							for game in games
								tr
									td #{game.creator}
									td #{game.languages}
									td
										font(color="green" style="text-shadow: 1px 1px black") #{game.num_easy}
									td
										font(color="yellow" style="text-shadow: 1px 1px black") #{game.num_moderate}
									td
										font(color="red" style="text-shadow: 1px 1px black") #{game.num_challenging}

									td
										font(color="green" style="text-shadow: 1px 1px black") #{game.time_easy}
									td
										font(color="yellow" style="text-shadow: 1px 1px black") #{game.time_moderate} 
									td
										font(color="red" style="text-shadow: 1px 1px black") #{game.time_challenging}

									td #{game.cur_player_num} / #{game.tot_player_num}
									td
										button(onclick="window.location.href = '/puzzle/" + puzzle + "'")
											i(class="fa fa-arrow-circle-right")



					else
						p No games to join ... why not create one?


			include ./footer.pug